<!DOCTYPE html>
<html>
<head>
  <%- include ("../partials/header.ejs") %>
</head>

<body>

  <!-- <%- include ("../partials/nav.ejs") %> -->

<div class="jumbotron text-center">
  <div class="container">
    <a href="/" class="lang-logo">
      <img src="/lang-logo.png">
    </a>
    <h1>3 ter ikea finder</h1>
  </div>
</div>
<div class="container">
  <div class="d-grid gap-3">
  <% for(var i=0; i < data.length; i++) { %>
    <div class="card mb-5 <%= data[i].stock ?  'text-white bg-success' : (data[i].restockDate ? 'text-white bg-warning':'') %>">
      <div class="card-body">
        <p><b><%= data[i].name %></b></p>
        <p>Id: <%= data[i].productId %></p>
        <p>Stock: <%= data[i].stock %></p>
        <p>Restock: <%= data[i].restockDate %></p>
      </div>
    </div>
    <% } %>
</div>


</body>
</html>
